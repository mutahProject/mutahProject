<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <ImageButton
        android:id="@+id/increaseinsidecartbtn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/ic_increase"/>

    <EditText
        android:id="@+id/numberofordersinsidecart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/increaseinsidecartbtn"
        android:inputType="number"
        android:text="1"/>
    <ImageButton
        android:id="@+id/decreaseinsidecardntn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/ic_decrease"
        android:layout_below="@+id/numberofordersinsidecart"/>


    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/increaseinsidecartbtn"
        android:contentDescription="Property Image"
        android:src="@drawable/ic_photo"/>

    <LinearLayout
        android:id="@+id/infoSection"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="item name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Description"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Price" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/removefromcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/infoSection"
        android:src="@drawable/ic_remove_from_cart" />


</RelativeLayout>