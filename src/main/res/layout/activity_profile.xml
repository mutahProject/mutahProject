<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/users_img_in_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_login"/>

    <TextView
        android:id="@+id/display_email_in_profile"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="142dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/users_img_in_profile"
        app:layout_constraintTop_toBottomOf="@+id/display_name_in_profile" />

    <TextView
        android:id="@+id/display_name_in_profile"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="142dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/users_img_in_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/display_phone_in_profile"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="142dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/users_img_in_profile"
        app:layout_constraintTop_toBottomOf="@+id/display_email_in_profile" />

    <Button
        android:id="@+id/edit_profile_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:text="Edit Profile"
        app:layout_constraintBottom_toTopOf="@+id/start_a_shop_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/users_img_in_profile"
        app:layout_constraintVertical_bias="0.915" />

    <Button
        android:id="@+id/start_a_shop_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Start a shop"
        app:layout_constraintBottom_toTopOf="@+id/delete_account_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/delete_account_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Delete account"
        app:layout_constraintBottom_toTopOf="@+id/view_shops_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logout_from_profile_btn"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="3dp"
        android:text="logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/back_from_profile"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginBottom="3dp"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logout_from_profile_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/view_shops_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="184dp"
        android:text="View your shops"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/view_sales_in_profile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="51dp"
        android:text="view sales"
        app:layout_constraintBottom_toTopOf="@+id/logout_from_profile_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_shops_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>